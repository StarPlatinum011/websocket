
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",              /* Use Node's modern module resolution */
    "moduleResolution": "NodeNext",    /* Match module resolution to module type */
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,           /* Crucial for resolving CJS/Express imports */
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
        "types": ["node"]                         // Include Node.js types

  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]

}